<!DOCTYPE html>
<html>

<head>
  <title>Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://fonts.googleapis.com/css?family=Helvetica" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      background-color: #333;
      font-family: 'Helvetica', sans-serif;
      font-weight: 300;
      background: url('/assets/crypto.gif') no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      height: 100%;
    }

    .card {
      margin-top: 50px;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
    }

    .form-control {
      font-size: 20px;
      padding: 20px;
      margin-bottom: 20px;
    }

    .btn-primary {
      font-size: 24px;
      padding: 10px 50px;
      margin-top: 20px;
      margin-bottom: 20px;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="card text-white bg-dark">
      <div class="card-header">
        <h1 class="text-center">Login</h1>
      </div>
      <div class="card-body">
        <% if (errors.length> 0) { %>
          <div class="alert alert-danger">
            <% errors.forEach(function(error) { %>
              <p>
                <%= error.msg %>
              </p>
              <% }); %>
          </div>
          <% } %>
            <form action="/users/login" method="post">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
              </div>
              <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Sign in</button>
              </div>
            </form>
            <form action="/users/register">
              <input type="submit" class="btn btn-secondary rounded-pill" value="Doesn't have an account?" />
          </form>
      </div>
    </div>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>