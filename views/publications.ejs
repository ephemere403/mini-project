<!DOCTYPE html>
<html>

<head>
  <title>Publications</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <style>
    body {
      background-color: #1a1a1a;
      color: #fff;
    }

    .main-text {
      font-size: 1.2rem;
      margin-top: 2rem;
    }

    .card-tweet {
      background-color: #292b2f;
      border: none;
      margin-bottom: 1.5rem;
    }

    .card-tweet-header {
      padding: 1.5rem;
      border-bottom: 1px solid #333;
    }

    .card-tweet-avatar {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      margin-right: 1rem;
    }

    .card-tweet-username {
      font-weight: 600;
      font-size: 1.2rem;
      margin-right: 1rem;
    }

    .card-tweet-time {
      font-size: 1.2rem;
      color: #9b9b9b;
      margin-left: 1rem;
    }

    .card-tweet-body {
      padding: 1.5rem;
      font-size: 1.2rem;
      color: #fff;
      line-height: 1.5;
    }

    .card-tweet-footer {
      border: none;
      background-color: transparent;
      padding: 1.5rem;
    }

    .card-tweet-actions {
      display: flex;
      justify-content: space-between;
    }

    .card-tweet-action {
      font-size: 1.2rem;
      color: #9b9b9b;
      text-decoration: none;
      margin-right: 2rem;
    }

    .card-tweet-action:hover {
      color: #fff;
      text-decoration: none;
    }

    .card-tweet-action i {
      margin-right: 0.5rem;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Publications</h1>
    <a href="/publications/new" class="btn btn-primary float-right">Post</a>
    <% if (success.length> 0) { %>
      <div class="alert alert-success">
        <% success.forEach(function(message) { %>
          <p>
            <%= message %>
          </p>
          <% }); %>
      </div>
      <% } %>
        <% if (errors.length> 0) { %>
          <div class="alert alert-danger">
            <% errors.forEach(function(error) { %>
              <p>
                <%= error.msg %>
              </p>
              <% }); %>
          </div>
          <% } %>
            <div class="row justify-content-center mb-4">
              <div class="col-md-6">
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="Search">
                  <div class="input-group-append">
                    <button class="btn btn-primary" type="button">Search</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="row justify-content-center">
              <div class="col-md-6">
                <% publications.forEach(function(publication) { %>
                  <div class="card card-tweet">
                    <div class="card-tweet-header d-flex align-items-center">
                      <img class="card-tweet-avatar" src="https://via.placeholder.com/50" alt="Avatar">
                      <div class="card-tweet-username">
                        <%= publication.author.username %>
                      </div>
                      <div class="card-tweet-time">
                        <%= publication.date.toDateString() %>
                      </div>
                    </div>
                    <div class="card-tweet-body">
                        <%= publication.title %> 
                        <br></br>
                        <%= publication.content%>
                    </div>
                    <div class="card-tweet-footer d-flex align-items-center">
                      <div class="card-tweet-actions">
                        <a href="#" class="card-tweet-action"><i class="far fa-comment"></i> 12</a>
                        <a href="#" class="card-tweet-action"><i class="fas fa-retweet"></i> 45</a>
                        <a href="#" class="card-tweet-action"><i class="far fa-heart"></i> 100</a>
                      </div>
                    </div>
                  </div>
                  <% }); %>
              </div>
            </div>
  </div>
  <!-- Bootstrap JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>